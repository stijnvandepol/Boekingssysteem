generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  BARBER
  ADMIN
  CUSTOMER
}

enum BookingStatus {
  CONFIRMED
  CANCELED
}

model User {
  id             String         @id @default(cuid())
  email          String         @unique
  passwordHash   String         @map("password_hash")
  name           String?
  emailVerified  DateTime?      @map("email_verified")
  image          String?
  role           UserRole       @default(CUSTOMER)
  bookings       Booking[]      @relation("CustomerBookings")
  availabilities Availability[] @relation("AvailabilityCreatedBy")
  accounts       Account[]
  sessions       Session[]
  createdAt      DateTime       @default(now()) @map("created_at")
  updatedAt      DateTime       @updatedAt @map("updated_at")

  @@map("users")
}

model Availability {
  id                 String    @id @default(cuid())
  startDateTime      DateTime  @map("start_datetime")
  endDateTime        DateTime  @map("end_datetime")
  slotDurationMinute Int       @map("slot_duration_minute")
  capacity           Int
  isBlocked          Boolean   @default(false) @map("is_blocked")
  note               String?
  createdById        String    @map("created_by_id")
  createdBy          User      @relation("AvailabilityCreatedBy", fields: [createdById], references: [id], onDelete: Restrict)
  bookings           Booking[]
  createdAt          DateTime  @default(now()) @map("created_at")
  updatedAt          DateTime  @updatedAt @map("updated_at")

  @@index([startDateTime, endDateTime])
  @@index([isBlocked, startDateTime])
  @@map("availabilities")
}

model Booking {
  id                String        @id @default(cuid())
  availabilityId    String        @map("availability_id")
  availability      Availability  @relation(fields: [availabilityId], references: [id], onDelete: Restrict)
  slotDateTime      DateTime      @map("slot_datetime")
  durationMinute    Int           @map("duration_minute")
  serviceName       String?       @map("service_name")
  customerName      String        @map("customer_name")
  email             String
  status            BookingStatus @default(CONFIRMED)
  notes             String?
  cancellationToken String        @unique @map("cancellation_token")
  customerId        String?       @map("customer_id")
  customer          User?         @relation("CustomerBookings", fields: [customerId], references: [id], onDelete: SetNull)
  createdAt         DateTime      @default(now()) @map("created_at")
  updatedAt         DateTime      @updatedAt @map("updated_at")

  @@index([slotDateTime, status])
  @@index([availabilityId, slotDateTime])
  @@map("bookings")
}

model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}
